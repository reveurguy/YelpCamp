<%- include("../partials/header2") %>

<div class="container pt-5  mb-5">
      <div class="row">
    	<div class="col-sm-7  mx-auto">
			<div class=" text-center">
				<div class=" text-center">
	<img src="https://img.icons8.com/color/100/000000/camping-tent.png" />
</div>
			<h1 class="login">Edit <%=campground.name%> Campground</h1>	
			</div>
       		
			<form  class="" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-label-group">
					<input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
					<label for="inputName">Name</label>
				</div>
				<div class="form-label-group">
					<input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
					<label for="inputImage">Image URL</label>
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" rows="10" name="campground[description]"><%= campground.description %></textarea>
				
				</div>
				<div class="form-label-group">
                <input class="form-control" type="text" name="campground[location]" value="<%= campground.location %>">
					<label for="inputLocation">Location</label>
              </div>
				<div class="form-label-group">
                <input class="form-control" type="text" name="campground[phone]" 
					   value="<%= campground.phone%>">
					<label for="inputPhone">Phone</label>
              </div>
				<div class="form-label-group">
					<input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.1" step="0.1">
					<label for="inputPrice">Price</label>
				</div>
				<div class="form-row">
                <div class="form-label-group col-md-6">
                  <input type="text" class="form-control" name="campground[start]" value="<%= campground.start %>" required>
					<label for="inputStart" class="mt-4 p-0 border-0 ml-3">Starting Month</label>	
                </div>
                <div class="form-label-group col-md-6">
                  <input type="text" class="form-control" name="campground[end]" value="<%= campground.end %>" required>
					<label for="inputEnd" class="mt-4 p-0 border-0 ml-3">Ending Month</label>
                </div>
              </div>
				<div class="form-group text-center">
					<button class="btn btn-primary btn-lg mt-1">
					Submit!	
				</button>
				</div>

				</form>
			<div class=" text-center">
			<a href="/campgrounds" class="btn btn-secondary btn-lg">Go Back</a>
			</div>
				

      </div>
    </div>
    </div>

<%- include("../partials/footer2") %>