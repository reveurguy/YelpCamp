<%- include("../partials/header2") %>


<div class="container pt-5  mb-5">
      <div class="row">
    	<div class="col-sm-7  mx-auto">
			<div class="text-center">
				<div class=" text-center">
	<img src="https://img.icons8.com/color/100/000000/camping-tent.png" />
</div>
					<h1 class="login">Create a New Campground</h1>
			</div>
			
			<form  class="" action="/campgrounds" method="POST">
				<div class="form-label-group">
					<input class="form-control" type="text" placeholder="Name" name="name" required autofocus>
					<label for="inputName">Name</label>
				</div>
				<div class="form-label-group">
					<input class="form-control" type="text" placeholder="Image url" name="image" required>
					<label for="inputImage">Image URL</label>
				</div>
				<div class="form-group shadow-textarea">
					<textarea class="form-control z-depth-1" rows="10" placeholder="Description" name="description" required></textarea>
				</div>
				<div class="form-label-group">
                <input class="form-control" type="text" name="location" placeholder="Location">
					<label for="inputLocation">Location</label>
              </div>
				<div class="form-label-group">
                <input class="form-control" type="text" name="phone" placeholder="Phone Number">
					<label for="inputPhone">Phone Number</label>
              </div>
				<div class="form-label-group">
					<input class="form-control" type="number" placeholder="Price" name="price" min="0.1" step="0.1" required>
					<label for="inputPrice">Price</label>
				</div>
				<div class="form-row">
                <div class="form-label-group col-md-6">
                  <input type="text" class="form-control mt-1" name="start" placeholder="Starting Month" required>
					<label for="inputStart">Starting Month</label>
                </div>
                <div class="form-label-group col-md-6">
                  <input type="text" class="form-control mt-1" name="end" placeholder="Ending Month" required>
					<label for="inputEnd">Ending Month</label>
                </div>
              </div>
		<div class="form-group  text-center">
			<button class="btn btn-primary btn-lg mt-2">
						Submit!	
			</button>
		</div>

			</form>
			<div class=" text-center">
					<a href="/campgrounds" class="btn btn-secondary btn-lg">Go Back</a>
			</div>
			

      </div>
    </div>
    </div>


<%- include("../partials/footer2") %>